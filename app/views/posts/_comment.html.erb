<div class="container mb-1 pt-5 mt-5 px-4 px-lg-5 text-left rounded bg-secondary fadein">
    <p>
    <h2 class=" mb-5 text-center fadein"><strong>コメント</strong></h2>
      <% comments.each do |comment|%>
        <% if comment.id.present? %>
          <p class="bg-secondary rounded mb-5 fadein">
            <% if comment.user.image.present? %>
              <%= link_to image_tag(comment.user.image.thumb.url, class: 'img-icon-post-show rounded-circle'), my_page_path(comment.user) %>
            <% else %>
              <%= link_to image_tag("default.jpg", class: 'img-icon-post-show rounded-circle'), my_page_path(comment.user) %>
            <% end %>
            <%= comment.content %>
            <% if comment.image.present? %>
              <%= image_tag comment.image.url, class:'img-comment-show'%>
            <% end %>
            <%= link_to '削除', post_comment_path(@post, comment), method: :delete, class: 'btn btn-dark' %>
          </p>
        <% end %>
      <% end %>
    </p>

    <% if user_signed_in? %>
        <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2 class='mb-1'><%= pluralize(@comment.errors.count, '件') %> のエラー</h2>
            <ul>
              <% @comment.errors.each do |error| %>
                <li class='mb-1'><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <%= form_with(model: [@post, @comment]) do |form| %>
          <div class="input-group">
              <%= form.text_area :content, class: "form-control bg-dark text-white", placeholder: "コメントを入力" %>
              <%= form.submit '投稿', class: 'btn btn-primary' %>
          </div>
          <div class="input-group w-25">
              <div class="custom-file">
                <%= form.label :画像を選択, class: "custom-file-label bg-dark" %>
                <%= form.file_field :image, class: "custom-file-input bg-dark", id: "inputFile" %>
              </div>
              <div class="input-group-append">
                <button type="button" class="btn btn-light input-group-text" id="inputFileReset">取消</button>
              </div>
          </div>
      <% end %>
    <% end %>
  </div>
