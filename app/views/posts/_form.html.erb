<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :access_date %>
    <%= form.date_select :access_date %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.fields_for :rating do |rating_form| %>
    <div class="field">
      <%= rating_form.label :sky_light %>
      <%= rating_form.number_field :sky_light %>
    </div>
    <div class="field">
      <%= rating_form.label :sky_clear %>
      <%= rating_form.number_field :sky_clear %>
    </div>
    <div class="field">
      <%= rating_form.label :sky_extent %>
      <%= rating_form.number_field :sky_extent %>
    </div>
    <div class="field">
      <%= rating_form.label :accessiblity %>
      <%= rating_form.number_field :accessiblity %>
    </div>
    <div class="field">
      <%= rating_form.label :convenient %>
      <%= rating_form.number_field :convenient %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
